<div class="container">

<h2><%= product.name %></h2>
<% if product.images.any? %>
  <% product.images.each do |image| %>
  <%= image_tag image.image.url(:medium) %>
  <% end %>
<% end %>
<br>
<h3>$<%= product.price %> </h3>
<br>
<p style="width:300px;">
  <%= product.description %>

</p>

<%= form_for order_items  do |f| %>
  <%= f.hidden_field :product_id, value: product.id %>
  <%= f.number_field :quantity %>
  <%= f.submit "Add to cart" %>
<% end %>
<br>
<%= link_to "Products", products_path  %>

<br>
<%= link_to "See All Reviews", product_reviews_path(product)  %>
<br>

<%= link_to "Add New Review", new_product_review_path(product) %>
<br><br><br>

</div>

<div id="new_review">

</div>
