<!DOCTYPE html>
<html>
  <head>
    <title>ManchitBabyProducts</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav class="navbar navbar-default navbar-custom">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Manchit Baby products</a>
      </div>
      <div class="nav navbar-nav">

      </div>
      <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
              <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Edit profile", edit_user_registration_path %></li>
              </ul>
            </li>
            <li><%= link_to 'Sign Out', destroy_user_session_path, :data => {:method=>'delete'} %></li>
        <% else %>
          <li><%= link_to 'Sign Up',  new_user_registration_path %></a></li>
          <li><%= link_to 'Sign In', new_user_session_path %></a></li>
        <% end %>
      </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <body>

    <div class="jumbotron">

    </div>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>

  </body>
</html>
