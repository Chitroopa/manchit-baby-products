<div class="row">
  <div class="col-md-2">
  </div>
  <h1>New Review</h1>
  <div class="col-md-8">
    <%= form_for [product,review] do |form| %>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class=>'form-control'%>
      </div>

      <div class="form-group">
        <%= form.label :content %>
        <%= form.text_area :content, :class=>'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :rating %>
        <%= form.number_field :rating, :class=>'form-control' %>
      </div>

      <%= form.submit %>
    <% end %>
  </div>
</div>
